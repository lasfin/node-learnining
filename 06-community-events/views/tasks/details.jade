extends ../../layouts/default

block head
    title #{task.name}

block body
    div.row
        div.col-sm-8
            div.page-header
                h1 #{task.name}
                    small &nbsp; Posted by #{task.username}
            ul.task-list
                li
                    strong Date:
                    | #{task.date}
                li
                    strong Start Time:
                    | #{task.startTime}
                li
                    strong End Time:
                    | #{task.endTime}
            p #{task.description}
            p
                i.fa.fa-arrow-circle-left
                a(href='/tasks')  Go Back

        div.col-sm-4
            div.page-header
                h1 Sidebar
