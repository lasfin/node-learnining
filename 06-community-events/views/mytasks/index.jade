extends ../../layouts/default

block head
    title My tasks

block body
    div.row
        div.col-sm-8
            div.page-header
                h1 My tasks
            if data
                ul.tasks
                    each task, i in data
                        li
                            strong #{task.name}
                div.col-sm-4
                    div.page-header
                        h1 Sidebar
            else
                p you have no tasks